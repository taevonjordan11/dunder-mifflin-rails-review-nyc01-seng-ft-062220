<h1>Edit Employee Form</h1>

<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%=form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :Alias %>
    <%= f.text_field :alias %>

    <%= f.label :Title %>
    <%= f.text_field :title %>

    <%= f.label :Office %>
    <%= f.text_field :office %>

    <%= f.label :Image %>
    <%= f.text_field :img_url %>

    <%= f.label :Dog %>
    <%= f.collection_select :dog_id, @dogs, :id, :name %>


    <%= f.submit %>
    <%end%>
